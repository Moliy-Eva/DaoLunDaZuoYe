<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <button class="userinfo-nickname" bindtap="onGetOpenid">欢迎</button>
    </view>
  </view>
</view>
<view class="content">
    <!--pics文件夹下的background.jpg文件-->
    <image class='background' src="../../images/背景.PNG" mode="widthFix"></image>
    <!--页面其它部分-->
</view>

<view class="line1">
<button bindtap="btn1">儿童信息</button>
<button bindtap="btn2">车内情况</button>
</view>
<view class="line2">
<button bindtap="btn3">相关新闻</button>
<button bindtap="btn4">关于我们</button>
</view>





